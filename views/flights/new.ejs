<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline">
    <label for="airport-input">Airport:</label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-no">Flight Number:</label>
    <input type="text" name="cast" id="cast-input">
    <label for="now-showing-checkbox">Departs:</label>
    <input type="checkbox" name="nowShowing" id="now-showing-checkbox" checked>
    <button type="submit">Add Flights</button>
  </form>
</main>

<%- include("../partials/footer") %>
