<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <a href="/flights/<%= flight._id %>/edit">Edit Flight</a>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
  </section>
  <h2>Tickets</h2>
  <form action="/flights/<%= flight._id %>/tickets" method="post" id="add-ticket-form">
    <label for="seat">Seat: (A-F 1-9)</label>
    <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    <label for="price">Price:</label>
    <input type="number" name="price" min="0">
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Remove</th>
          <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><form 
              action="/flights/<%= flight._id %>/tickets?_method=DELETE"
              class="delete-form"
              method="post">
              <button type="submit">X</button>
              </form></td>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>
</main>
  
<%- include('../partials/footer') %>